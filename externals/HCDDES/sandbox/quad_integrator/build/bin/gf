#!/bin/sh

bitbake -c rebuild gumstix-frodo
if [ $? -ne 0 ] ; then
	echo "FAILED."
	exit 1
fi

scp ~/gumstix/gumstix-oe/tmp/deploy/glibc/ipk/armv5te/gumstix-frodo_1.0-r0_armv5te.ipk root@192.168.0.192:
if [ $? -ne 0 ] ; then
	echo "FAILED."
	exit 2
fi

ssh root@192.168.0.192 "ipkg -force-reinstall install gumstix-frodo_1.0-r0_armv5te.ipk"
if [ $? -ne 0 ] ; then
        echo "FAILED."
        exit 3
fi
